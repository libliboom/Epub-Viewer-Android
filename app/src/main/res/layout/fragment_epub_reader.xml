<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.libliboom.epubviewer.reader.view.ReaderWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/reader_view_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nv_seek_bar"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/bottom_nv_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorSecondaryDark"
        app:layout_constraintTop_toBottomOf="@id/web_view"
        app:layout_constraintBottom_toTopOf="@id/bottom_nv_reader" />

    <TextView
        android:id="@+id/tv_page_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDark"
        android:textColor="@color/color_white"
        android:layout_marginBottom="2dp"
        tools:text="100/770"
        app:layout_constraintBottom_toTopOf="@id/bottom_nv_reader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nv_reader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_0057e7"
        app:itemIconTint="@drawable/select_bottom_nv_item"
        app:itemTextColor="@drawable/select_bottom_nv_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_reader" />

</androidx.constraintlayout.widget.ConstraintLayout>